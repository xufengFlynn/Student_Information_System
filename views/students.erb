<p><strong>Students list</strong></p>

<% if @students.any? %>
  <% @students.each do|student| %>
    <li>
      <a href="/students/<%= student.id %>"><%=student.lastname%></a>
    </li>
  <% end %>
<% else %>
  <p>No Student Now</p>
<% end %>

